{
  "name": "spelinx",
  "version": "1.0.0",
  "description": "SPELINX - Premium Gaming Platform with modern glassmorphism UI",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:server": "nodemon server.js",
    "build": "npm install && cd spelinx-frontend && npm install --legacy-peer-deps && npm run build && echo '=== BUILD COMPLETE ===' && ls -la out/ | head -10",
