  },
  "keywords": [
    "gaming",
    "platform",
    "nextjs",
    "react",
    "mongodb",
    "socket.io",
    "glassmorphism",
    "tailwindcss"
  ],
  "author": "SPELINX Team",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "fs": "^0.0.1-security",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.3",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.8.1",
    "stripe": "^19.1.0"
  },
  "devDependencies": {
